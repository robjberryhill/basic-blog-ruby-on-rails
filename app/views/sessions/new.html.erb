<h1 align="center">Log In</h1>

<%# A session is not model backed and so you need to specify a :session instead of @model and a path because there is no path ie: login_path %>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |form| %>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= form.label :email %>
    </div>
    <div class="col-sm-8">
      <%= form.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= form.label :password %>
    </div>
    <div class="col-sm-8">
      <%= form.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit"Log In", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
<div class="col-xs-offset-4 col-xs-4">
  [ <%= link_to "Cancel and return to articles", articles_path %> ]
</div>