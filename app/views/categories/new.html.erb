<h1 align="center">Create Category</h1>

<%= render "shared/errors", obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |form| %>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= form.label :name %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :name, class: "form-control", placeholder: "Category Name.", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
<div class="col-xs-offset-4 col-xs-4">
  [ <%= link_to "Cancel and return to articles", articles_path %> ]
</div>
