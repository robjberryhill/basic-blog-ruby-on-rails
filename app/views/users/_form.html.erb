<%= render "shared/errors", obj: @user %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :username %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :username, class: "form-control", placeholder: "Enter username.", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :email %>
        </div>
        <div class="col-sm-8">
          <%= form.email_field :email, class: "form-control", placeholder: "Enter email." %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :password %>
        </div>
        <div class="col-sm-8">
          <%= form.password_field :password, class: "form-control", placeholder: "Enter password." %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit(@user.new_record? ? "Sign Up" : "Update", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-offset-4 col-xs-4">
      [ <%= link_to "Cancel and return to articles", articles_path %> ]
    </div>
  </div>
</div>