<%# Setting the obj to @article for errors %>
<%= render "shared/errors", obj: @article %>
<div class="row">
  <div class="col-xs-12">
    <%# passing in the article to create a form %>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= form.label :description %>
        </div>
        <div class="col-sm-8">
          <%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%# We are creating a collection of check boxes of categories using singular_ids method...
            For the Category.all Collection using id as the value method...
            and name as the text method... %>
            <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <%# Here we are creating a label with a checkbox inside of it with the specified classes.
              We are adding the text value of the :name of the Category. %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-offset-4 col-xs-4">
      [ <%= link_to "Cancel and return to articles", articles_path %> ]
    </div>
  </div>
</div>
